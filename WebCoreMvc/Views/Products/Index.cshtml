@{
    ViewData["Title"] = "Users Page";
}
<a class="btn btn-sm btn-primary text-light" asp-controller="Products" asp-action="Add">+</a>
<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (Product product in ViewBag.products)
    {
    <div class="col-md-4 col-sm-12">
        <div class="card h-100">
            <img src="@product.ImageUrl" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title">@product.Name</h5>
                <p class="card-text">@product.Description.Substring(0, (product.Description.Length>110)?110: product.Description.Length)...</p>
                <a href="/Products/Delete/@product.Id"><button class="btn btn-sm btn-danger float-right"><i class="fa-solid fa-trash" ></i></button> </a>
                <a href="/Products/Update/@product.Id"><button class="btn btn-sm btn-warning float-right mr-1"><i class="fa-solid fa-pencil"></i></button></a>
            </div>
        </div>
    </div>
    }
</div>